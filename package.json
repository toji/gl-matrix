{
  "name": "gl-matrix",
  "description": "Javascript Matrix and Vector library for High Performance WebGL apps",
  "version": "2.3.2",
  "main": "src/gl-matrix.js",
  "homepage": "http://glmatrix.net",
  "bugs": {
    "url": "https://github.com/toji/gl-matrix/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toji/gl-matrix.git"
  },
  "contributors": [
    {
      "name": "Brandon Jones",
      "email": "tojiro@gmail.com"
    },
    {
      "name": "Colin MacKenzie IV",
      "email": "sinisterchipmunk@gmail.com"
    }
  ],
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "jasmine-node": "1.2.2",
    "jsdoc": "^3.4.0",
    "node-libs-browser": "^0.5.2",
    "derequire": "^2.0.3",
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "browserify-header": "^0.9.2",
    "uglifyify": "^3.0.4"
  },
  "license": "MIT",
  "scripts": {
    "test": "jasmine-node spec",
    "doc": "jsdoc -c jsdoc.config.json",
    "build": "browserify -p browserify-header src/gl-matrix.js --standalone gl-matrix | derequire > dist/gl-matrix.js",
    "build-min": "browserify -p browserify-header -g uglifyify src/gl-matrix.js --standalone gl-matrix | derequire > dist/gl-matrix-min.js",
    "build-all": "npm run build && npm run build-min"
  }
}
